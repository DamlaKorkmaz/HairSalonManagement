@model HairSalonManagement.Models.Service

<h2>@Model.Name - Çalışan Ekle</h2>

<!-- Çalışanlar Listesi -->
<h3>Çalışanlar</h3>
<ul>
    @foreach (var employeeService in Model.EmployeeServices)
    {
        <li>@employeeService.Employee.Name (@employeeService.Employee.Specialization)</li>
    }
</ul>

<!-- Çalışan Ekleme Formu -->
<h3>Çalışan Ekle</h3>
<form asp-action="AddEmployeeToService" method="post">
    <input type="hidden" name="serviceId" value="@Model.ServiceID" />

    <div>
        <label for="employeeId">Çalışan Seç:</label>
        <select name="employeeId" id="employeeId">
            @foreach (var employee in ViewBag.Employees)
            {
                <option value="@employee.EmployeeID">@employee.Name (@employee.Specialization)</option>
            }
        </select>
    </div>

    <button type="submit">Çalışan Ekle</button>
</form>

<!-- Başarı Mesajı -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
