@model IEnumerable<HairSalonManagement.Models.Uzman>

@{
    ViewData["Title"] = "Uzman Yönetimi";
}

<div class="container mt-4">
    <h2>Uzman Yönetimi</h2>
    <a href="/Admin/AddUzman" class="btn btn-success mb-3">Uzman Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Uzmanlık Alanı</th>
                <th>Çalışma Saatleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var uzman in Model)
            {
                <tr>
                    <td>@uzman.Isim</td>
                    <td>@uzman.Soyisim</td>
                    <td>@uzman.UzmanlikAlani</td>
                    <td>@uzman.CalismaSaatAraligi</td>
                    <td>
                        <a href="/Admin/EditUzman/@uzman.UzmanId" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/Admin/DeleteUzman/@uzman.UzmanId" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>