@model IEnumerable<HairSalonManagement.Models.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <h2>Müşteri Yönetimi</h2>
    <a href="/Auth/Register" class="btn btn-success mb-3">Kullanıcı ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th>Şifre</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var uzman in Model)
            {
                <tr>
                    <td>@uzman.Isim</td>
                    <td>@uzman.Soyisim</td>
                    <td>@uzman.Email</td>
                    <td>@uzman.Sifre</td>
                    <td>
                        <a href="/Admin/EditUzman/@uzman.KullaniciId" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/Admin/DeleteUzman/@uzman.KullaniciId" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

